@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SendedMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Gönderilen Mesajlar</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">Mesaj No:</th>
                            <th scope="col" class="sort" data-sort="budget">Konu</th>
                            <th scope="col" class="sort" data-sort="status">Kime</th>
                            <th scope="col">Tarih</th>
                            <th scope="col" class="sort" data-sort="completion">Mesajı Oku</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                        
                        
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.WriterMessageId</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    @item.Subject
                                </td>
                                <td class="budget">
                                    @item.Receiver
                                </td>
                                <td>
                                    @(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))
                                </td>

                                <td><a href="/Writer/Message/SendedMessageDetails/@item.WriterMessageId" class="btn btn-sm btn-neutral">Mesajı Aç</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Card footer -->
            <div class="card-footer py-4">
                <nav aria-label="...">
                    <ul class="pagination justify-content-end mb-0">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>



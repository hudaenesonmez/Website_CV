@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "RecievedMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>"@Model.Subject" Başlıklı Mesaj</h1>
<br />
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <form class="form-group">
                @Html.Label("Gönderen :")
                @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control", @readonly = "readonly" })
                <br />
                @Html.Label("Gönderen Mail :")
                @Html.TextBoxFor(x => x.Sender, new { @class = "form-control", @readonly = "readonly" })
                <br />
                @Html.Label("Mesaj :")
                @Html.TextAreaFor(x => x.Content, 5, 3, new { @class = "form-control", @readonly = "readonly" })
            </form>
    </table>
</div>
<br />
<a href="/Writer/Message/RecievedMessage" class="btn btn-sm btn-dark">Geri Dön</a>


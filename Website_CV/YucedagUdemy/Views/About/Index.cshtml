@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>Öne Çıkanlar</h1>
@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Öne Çıkanlar'ı Düzenle</p>
                <form class="forms-sample">
    @Html.HiddenFor(x => x.AboutId)
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description,10,3, new { @class = "form-control" })
    <br />
    @Html.Label("Yaş")
    @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
    <br />
    @Html.Label("E-Mail")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    @Html.Label("Adres")
    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })

    <br />
    <button class="btn btn-primary"> Hakkımda'yı Güncelle </button>
                </form>
            </div>
        </div>
    </div>
}
@await Component.InvokeAsync("AboutList");
<br />


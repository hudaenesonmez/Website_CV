@using EntityLayer.Concrete
@model List<Portofolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Geliştirilen Projeler</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Proje Adı </th>
                                <th> Platform </th>
                                <th> Durumu </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                               
                                <td>
                                    <img src="@item.PlatformLogoUrl" alt="image" />
                                    <span class="pl-2">@item.Name</span>
                                </td>
                                <td> @item.Platform </td>
                                <td>
                                    <div class="badge badge-outline-success">@item.Status</div>
                                </td>
                            </tr>
                                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@using EntityLayer.Concrete
@model List<WriterMessage>
<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Mesajlar</h4>
                <a href="/Writer/Message/RecievedMessage/"><p class="text-muted mb-1 small">Tümünü Gör</p></a>
            </div>
            <div class="preview-list">
                @foreach(var item in Model)
                {
                    <div class="preview-item border-bottom">
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@item.SenderName</h6>
                                    <p class="text-muted text-small">@(((DateTime)item.Date).ToString("dd-mm-yyyy"))</p>
                                </div>
                                <p class="text-muted">@item.Content.Substring(0,20) ...</p>
                                <a href="/Message/AdminRecievedMessageDetails/@item.WriterMessageId" class="btn btn-info"> Mesajı Oku</a>
                            </div>
                        </div>
                    </div>
                }
                
              
            </div>
        </div>
    </div>
</div>
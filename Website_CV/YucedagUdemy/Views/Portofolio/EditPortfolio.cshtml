@model EntityLayer.Concrete.Portofolio
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Proje Düzenle</h3>
</div>
<div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="form-group" method="post">
@using (Html.BeginForm("EditPortfolio", "Portofolio", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.PortofolioId)
    @Html.Label("Proje Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.Name)
    <br />
    @Html.Label("Platform")
    @Html.TextBoxFor(x => x.Platform, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Platform)
    <br />
    @Html.Label("Küçük Resim URl")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Büyük Resim URL")
    @Html.TextBoxFor(x => x.ImageFullUrl, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Platform URL")
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HrefUrl)
    <br />
    @Html.Label("Proje Bağlantı URL")
    @Html.TextBoxFor(x => x.HrefUrl, new { @class = "form-control" })

    <br />
    <button class="btn btn-primary"> Projeyi Güncelle </button>  
}
            </form>
        </div>
    </div>
</div>

<a href="/Portofolio/Index" class="btn btn-warning" style="width: 125px">Geri Dön</a>
<br />

